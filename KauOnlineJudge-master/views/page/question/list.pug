extends ../../page

block content
    include ../../mixin
    table.table.table-striped.table-hover
        thead
            colgroup
                col(style='width:20%')
                col(style='width:50%')
                col(style='width:15%')
                col(style='width:15%')
            tr
                th #
                th 문제 이름
                th 태그
                th 사용 가능한 언어
        tbody
            each q in q_list
                if (q.title != '')
                    tr
                        td= q._id
                        td
                            a(href=`/question/${q._id}`) #{q.title}
                        td
                            +tags(q.tags)
                        td 
                            each lan in q.languages
                                =lan + ' '
        tfoot
            tr
                td 
                    a(href=`/question/?${Number(page) > 1 ? 'page=' + (Number(page) - 1) : 'page=1'}`) #{Number(page) > 1 ? '이전 페이지' : ''}
                td
                td
                td
                    a(href=`/question/?${Number(page) > 0 ? 'page=' + (Number(page) + 1) : 'page=2'}`) #{hasNext ? '다음 페이지' : ''}

    -if (user !== undefined)
        .text-right
            a.btn.btn-outline-primary(href='/question/create') 문제 추가